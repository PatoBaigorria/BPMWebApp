<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
    <li class="nav-item">
        <div class="nav-link text-dark d-flex align-items-center">
            <i class="bi bi-person-circle me-1"></i>
            <span class="fw-bold me-1">Bienvenid@@ </span>
            <span>@(User.FindFirst("NombreCompleto")?.Value ?? User.Identity?.Name)</span>
        </div>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill logout-btn">
                <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
        </a>
    </li>
}
</ul>

<style>
    .logout-btn {
        transition: all 0.3s ease;
        border-width: 2px;
        font-weight: 500;
        padding: 0.25rem 0.75rem;
        margin-left: 0.5rem;
    }
    
    .logout-btn:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transform: translateY(-1px);
    }
</style>
