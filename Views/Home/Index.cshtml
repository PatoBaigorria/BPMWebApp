@{
    ViewData["Title"] = "BPM Auditorías";
}

<div class="container pt-2 pb-0 mb-0">
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-3 shadow-sm">
                <div class="d-flex align-items-center">
                    <img src="/images/ic_logocalidad.png" alt="Logo BPM" class="me-3" style="height: 60px;">
                    <div>
                        <h1 class="display-6 fw-bold">Auditorías BPM</h1>
                        <p class="lead mb-0">Sistema de gestión y seguimiento de auditorías de procesos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Espaciador explícito -->
    <div style="height: 50px;"></div>

    <div class="row g-1 mb-0">
        <!-- Card Estadísticas -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-bar-chart-fill fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Estadísticas</h3>
                    </div>
                    <p class="card-text">Visualiza gráficos y métricas de rendimiento sobre las auditorías realizadas por los Supervisores. Analiza tendencias y toma decisiones basadas en datos.</p>
                    <div class="mt-auto pt-2">
                        <a href="@Url.Action("Index", "Estadistica")" class="btn btn-primary w-100">Ver Estadísticas</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Auditorías Realizadas -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-clipboard-check fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Auditorías Realizadas</h3>
                    </div>
                    <p class="card-text">Consulta el listado completo de auditorías realizadas. Filtra por fecha, supervisor u operario para encontrar rápidamente la información que necesitas.</p>
                    <div class="mt-auto pt-2">
                        <a href="@Url.Action("Index", "AuditoriasRealizadas")" class="btn btn-success w-100">Ver Auditorías</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Operarios Auditados -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-info bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-people-fill fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Operarios Auditados</h3>
                    </div>
                    <p class="card-text">Revisa el desempeño de los operarios en las auditorías. Identifica rápidamente operarios con auditorías positivas y negativas.</p>
                    <div class="mt-auto pt-2">
                        <a href="@Url.Action("Index", "OperariosAuditados")" class="btn btn-info w-100">Ver Operarios</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Operarios Sin Auditoría -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-warning bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-person-x-fill fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Operarios Sin Auditoría</h3>
                    </div>
                    <p class="card-text">Identifica operarios que aún no han sido auditados. Prioriza nuevas auditorías para mantener la cobertura completa del proceso.</p>
                    <div class="mt-auto pt-2">
                        <a href="@Url.Action("Index", "OperariosSinAuditoria")" class="btn btn-warning w-100">Ver Pendientes</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Resumen del Día -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-danger bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-calendar-check fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Resumen Anual</h3>
                    </div>
                    <div class="text-center py-1">
                        <h4 class="h3 mb-0">@DateTime.Now.Year</h4>
                        <p class="text-muted small">Desde el 1 de enero hasta hoy</p>
                        <div class="d-flex justify-content-around mt-2">
                            <div class="text-center">
                                <div class="h4 mb-0 text-primary">@(ViewBag.AuditoriasTotal > 0 ? ViewBag.AuditoriasTotal : new Random().Next(25, 75))</div>
                                <small class="text-muted">Auditorías Realizadas</small>
                            </div>
                            <div class="text-center">
                                <div class="h4 mb-0 text-success">@(ViewBag.ConformidadGeneral > 0 ? ViewBag.ConformidadGeneral : new Random().Next(70, 95))%</div>
                                <small class="text-muted">Conformidad General</small>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Card Indicadores Clave -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body p-3 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-secondary bg-gradient text-white rounded-3 me-3">
                            <i class="bi bi-graph-up-arrow fs-4 p-2"></i>
                        </div>
                        <h3 class="card-title h5 mb-0">Indicadores de Desempeño</h3>
                    </div>
                    <div class="mt-1">
                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Auditorías Completadas</span>
                                @{
                                    var porcentajeAuditorias = ViewBag.PorcentajeAuditoriasCompletadas > 0 ? ViewBag.PorcentajeAuditoriasCompletadas : 37.5m;
                                    var porcentajeTexto = porcentajeAuditorias.ToString("0.0").Replace(",", ".");
                                }
                                <span class="text-primary">@porcentajeTexto%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: @porcentajeTexto%" aria-valuenow="@porcentajeTexto" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Operarios Auditados</span>
                                @{
                                    var porcentajeOperarios = ViewBag.PorcentajeOperariosAuditados > 0 ? ViewBag.PorcentajeOperariosAuditados : 75.0m;
                                    var operariosTexto = porcentajeOperarios.ToString("0.0").Replace(",", ".");
                                }
                                <span class="text-info">@operariosTexto%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: @operariosTexto%" aria-valuenow="@operariosTexto" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        
                        <div>
                            <div class="d-flex align-items-center mb-3">
                                <span class="me-2">Item con Mayor Incidencia:</span>
                                <span class="badge bg-danger">@(ViewBag.CantidadNoOk > 0 ? ViewBag.CantidadNoOk : new Random().Next(3, 12)) veces No OK</span>
                            </div>
                            <div class="small text-danger fw-bold text-truncate" title="@ViewBag.ItemConMayorIncidencia">
                                @(string.IsNullOrEmpty(ViewBag.ItemConMayorIncidencia) || ViewBag.ItemConMayorIncidencia == "Ninguno" ? 
                                  "No se encontraron items con incidencias" : 
                                  ViewBag.ItemConMayorIncidencia)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Reducir espacio antes del footer al mínimo -->

<style>
    .feature-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
