@model List<object>

@{
    ViewBag.Title = "Detalles de Auditorías Negativas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Ítems NO OK</h2>
        <a href="@Url.Action("Index", "OperariosAuditados", new { desde = ViewBag.Desde, hasta = ViewBag.Hasta })" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model != null && Model.Any())
    {
        var fechaDesdeFormateada = DateTime.TryParse(ViewBag.Desde, out DateTime fd) ? fd.ToString("dd/MM/yyyy") : ViewBag.Desde;
        var fechaHastaFormateada = DateTime.TryParse(ViewBag.Hasta, out DateTime fh) ? fh.ToString("dd/MM/yyyy") : ViewBag.Hasta;
        
        <div class="row mt-3">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white py-2">
                        <h6 class="mb-0"><i class="bi bi-person"></i> Información del Operario</h6>
                    </div>
                    <div class="card-body py-2">
                        <p class="mb-1"><strong>Nombre:</strong> @ViewBag.NombreOperario</p>
                        <p class="mb-1"><strong>Legajo:</strong> @ViewBag.Legajo</p>
                        <p class="mb-0"><strong>Período:</strong> @fechaDesdeFormateada a @fechaHastaFormateada</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-danger text-white py-2">
                        <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Ítems con Estado NO OK</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-hover table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3">Descripción del Ítem</th>
                                    <th class="text-center" style="width: 150px;">Ocurrencias</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    try
                                    {
                                        var itemDict = System.Text.Json.JsonSerializer.Deserialize<System.Collections.Generic.Dictionary<string, System.Text.Json.JsonElement>>(System.Text.Json.JsonSerializer.Serialize(item));
                                        
                                        <tr>
                                            <td class="ps-3">@(itemDict.ContainsKey("descripcion") ? itemDict["descripcion"].ToString() : 
                                                  itemDict.ContainsKey("Descripcion") ? itemDict["Descripcion"].ToString() : "Sin descripción")</td>
                                            
                                            <td class="text-center">
                                                <span class="badge bg-danger fs-6">
                                                    @(itemDict.ContainsKey("count") ? itemDict["count"].ToString() : 
                                                      itemDict.ContainsKey("Count") ? itemDict["Count"].ToString() : "0")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                    catch (Exception ex)
                                    {
                                        <tr>
                                            <td colspan="2" class="text-danger ps-3">Error al procesar item: @ex.Message</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No se encontraron ítems con estado No OK para este operario en el período seleccionado.
        </div>
    }
</div>
